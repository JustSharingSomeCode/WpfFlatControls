<UserControl x:Name="MainControl"  x:Class="WpfFlatControlsLib.Labels.FlatLabel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WpfFlatControlsLib.Labels"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" Width="250" Height="50" SizeChanged="MainControl_SizeChanged">
    <Border x:Name="ControlBorder" CornerRadius="{Binding ElementName=MainControl, Path=CornerRadius}" BorderBrush="{Binding ElementName=MainControl, Path=BorderBrush}" BorderThickness="{Binding ElementName=MainControl, Path=BorderThickness}" Background="{Binding ElementName=MainControl, Path=Background}">
        <Label x:Name="ControlText" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Padding="0" Foreground="{Binding ElementName=MainControl, Path=Foreground}" Content="{Binding ElementName=MainControl, Path=Text}" FontFamily="{Binding ElementName=MainControl, Path=FontFamily}" FontSize="{Binding ElementName=MainControl, Path=FontSize}"/>
    </Border>
</UserControl>
